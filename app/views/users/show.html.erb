<div class="main user-show">
  <div class="container">
    <div class="user">
      <div class="users-heading"> My Profile
      </div>
      <div class="status3">
      <p>ランク：《　<%= @user.status %>　》</p>
      </div>
      <p>合計幸福度スコア：　<%= @user.total_score %></p>
      <img src="<%= "/user_images/#{@user.image_picture}" %>">
      <h2><%= @user.name %>
      <% if @user.id == @current_user.id %>
      <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <% end %>
      </h2>
      <h1>ひとこと</h1>
      <% if @user.tweet %>
      <p><%= @user.tweet %></p>
      <% end %>
      
    </div>

    <ul class="user-tabs">
      <li class="active"><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <li><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
      <li><%= link_to("目標", "/users/#{@user.id}/goals") %></li>
    </ul>

    <% @user.posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
         <img src="<%= "/user_images/#{post.user.image_picture}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
            <h1>幸福度【　<%= post.point %>　】</h1>
          </div>
          <div class="post-content">
          <%= link_to(post.content, "/posts/#{post.id}") %>
          </div>
          <div class="post-picture">
          <% if post.post_picture %>
          <img src="<%= "/post_pictures/#{post.post_picture}" %>">
          <% end %>
          </div>
        </div>
      </div>
    <% end %>
</div>